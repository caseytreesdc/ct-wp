{#
    pass this:
    1. image - url of the image
    2. width - width of image
    3. height - height of image
    4. id - unique ID for the filter (could simply be a random number generated by twig)
	
	Sample implementation:
    {% include '_components/bw-image.html' with { image: 'assets/some-image.png', id: random(), width: 430, height: 250 } %}
#}
<svg width="{{ width }}" height="{{ height }}" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg">
     <filter id="{{ id }}">
          <feColorMatrix type="saturate" values="0"/>
     </filter>
     <image class="color" width="100%" height="100%" xlink:href="{{ image }}" />
     <image class="bw" filter="url(#{{ id }})" width="100%" height="100%" xlink:href="{{ image }}" />
</svg>