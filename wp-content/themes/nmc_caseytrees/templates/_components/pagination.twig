{% if pagination.total > 1 %}
<div class="pagination">
    {% if pagination.prev %}
        <a href="{{ pagination.prev.link }}" class="newer {{ pagination.prev.link|length ? '' : 'invisible' }}">{% include '_svg/swipe-arrow-left.svg' %} Newer Posts</a>
    {% endif %}


    {#
