                {% else %}
                    <span class="{{ page.class }}">{{ page.title }}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    #}


    {% if pagination.next %}
        <a href="{{ pagination.next.link }}" class="older {{ pagination.next.link|length ? '' : 'invisible' }}">Older Posts {% include '_svg/swipe-arrow-right.svg' %}</a>
    {% endif %}
</div>
{% endif %}