<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="{{ site.charset }}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="{{ images }}favicon.png">
    <link rel="alternate" type="application/rss+xml" title="{{ site.name }} Feed" href="{{ function('get_bloginfo', 'rss2_url') }}">
    {% include '0_lib/google.twig' with {location: 'head'} %}

    {{ wp_head }}

    {% block head %}{% endblock %}
</head>
<body class="{{ body_class }}{% block bodyclass %}{% endblock bodyclass %}">
{% include '0_lib/google.twig' %}
    {% block bodytag %}

        {% block header %}
            {% include '_global/header.twig' %}
        {% endblock %}

        {% block masthead %}
            {% include '_components/masthead.twig' %}
        {% endblock masthead %}

        {% block subnav %}
            {% include '_components/subnav.twig' %}
        {% endblock subnav %}

        {% block layout %}{% endblock %}

        {% block footer %}
            {% include '_global/footer.twig' %}
        {% endblock %}

        {% if post.get_field('show_popup') %}
            {% include '_components/popup.twig' %}
        {% endif %}

    {% endblock %}

    {{ wp_footer }}

</body>
</html>